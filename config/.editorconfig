# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.env]
insert_final_newline = false

[*.{php,js,py}]
charset = utf-8

[*.php]
indent_style = space
indent_size = 4

[**.blade.php]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.{js,ts}]
indent_style = space
indent_size = 2

[*.mjs]
indent_style = space
indent_size = 2

[*.vue]
indent_style = space
indent_size = 2

[{Makefile,**.mk}]
indent_style = tab
